<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ua.juanchema.mastermoviles.tdam.proyectofinalsockets.ConfigureServer">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s da Juasap"
        android:id="@+id/inicio_servidor_conectarButton"
        android:onClick="AbrirServer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConfigÃºrate, caballero"
        android:id="@+id/inicio_servidor_TV_titulo"
        android:layout_alignParentTop="true"
        android:textColor="#00095c"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Puerto"
        android:id="@+id/inicio_servidor_TV_info2"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inicio_servidor_TV_titulo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autoaceptar Clientes"
        android:id="@+id/inicio_servidor_TV_infoAuto"
        android:layout_below="@+id/inicio_servidor_ET_Puerto"
        android:textSize="20dp"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inicio_servidor_CB_autoaceptar"
        android:layout_below="@+id/inicio_servidor_TV_infoAuto"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:lines="1"
        android:singleLine="true"
        android:id="@+id/inicio_servidor_ET_Puerto"
        android:layout_below="@+id/inicio_servidor_TV_info2"
        android:textAlignment="center"
        android:hint="8080"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personaliza tu Conversation"
        android:id="@+id/inicio_servidor_TV_infouser"
        android:textSize="25dp"
        android:textColor="#00095c"
        android:textAlignment="center"
        android:layout_below="@+id/inicio_servidor_CB_autoaceptar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu nombre"
        android:id="@+id/inicio_servidor_TV_nombreuser"
        android:layout_below="@+id/inicio_servidor_TV_infouser"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inicio_servidor_ET_nombreUsuario"
        android:lines="1"
        android:singleLine="true"
        android:layout_below="@+id/inicio_servidor_TV_nombreuser"
        android:hint="El Burto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fondo de Conversacion"
        android:id="@+id/inicio_servidor_TV_infofondo"
        android:layout_below="@+id/inicio_servidor_ET_nombreUsuario"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inicio_servidor_spinner_fondo"
        android:layout_below="@+id/inicio_servidor_TV_infofondo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>